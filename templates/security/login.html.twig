{% extends 'base.html.twig' %}
{% block title %}{{ brand }} - Login{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <form action="{{ path('app_login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h3 class="text-center mb-4">Login <br> {{ brand }}</h3>

                    <div class="form-group">
                        <input type="text" value="{{ last_username }}" name="username" placeholder="Username" class="form-control" required autofocus>
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control" required autocomplete="off">
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="col-lg btn btn-primary" type="submit">Login</button>
                </form>

                <div class="text-center my-4">
                    Baru kenal <a href="#">{{ brand }}</a> ? <br>
                    Ayo<a href="{{ path('app_register') }}" class=""> registrasi </a>sekarang.<br>
                    Lupa<a href="{{ path('forgotPassword') }}"> password.</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}