{% extends 'base.html.twig' %}

{% block title %}
	Notifikasi - {{ app.user.fullname }}
{% endblock %}

{% block body %}
	{% for notification in notifications %}
		<div class="row border-bottom m-2">
			{% if notification.type == 1 %}
				<div class="col-0 mr-2">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
				</div>

				<a href="{{ path('profile', {'username': notification.sender}) }}">
					<div class="col-0">
						@{{ notification.sender }} "mulai mengikuti anda."
						<span class="text-muted d-block">{{ notification.submittedAt ? notification.submittedAt|date('D, M y') : '' }}</span>
					</div>
				</a>
			{% elseif notification.type == 2 %}
				<div class="col-0 mr-2">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="green" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
				</div>

				<a href="{{path('postShow', {'id': notification.refid }) }}">
					<div class="col-0">
						<span class="font-weight-bold text-primary">@{{ notification.sender }}</span> mengomentari:
						<span class="text-dark d-block">"{{ notification.summary }}"</span>
						<span class="text-muted d-block">{{ notification.submittedAt ? notification.submittedAt|date('D, M y') : '' }}</span>
					</div>
				</a>
			{% elseif notification.type == 3 %}
				<div class="col-0 mr-2">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="green" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
				</div>

				<a href="{{path('postShow', {'id': notification.refid }) }}">
					<div class="col-0">
						<span class="font-weight-bold text-primary">@{{ notification.sender }}</span> menyukai:
						<span class="text-dark d-block">"{{ notification.summary }}"</span>
						<span class="text-muted d-block">{{ notification.submittedAt ? notification.submittedAt|date('D, M y') : '' }}</span>
					</div>
				</a>
			{% endif %}
		</div>
	{% endfor %}
{% endblock %}