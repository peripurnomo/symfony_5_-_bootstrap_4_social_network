{% if avatar.image %}
	<img class="border" src="{{ asset('photo/avatar/') ~  avatar.image }}" style="vertical-align: middle; width: 50px; height: 50px; border-radius: 50%">
{% else %}
	<img src="{{ asset('photo/templates/avatar.png') }}" style="vertical-align: middle; width: 50px; height: 50px; border-radius: 50%">
{% endif %}